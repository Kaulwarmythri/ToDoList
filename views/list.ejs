<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1> <%= dayOfWeek %> </h1>
    </div>

    <div class="box">
            <% newItems.forEach(function(element){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=element._id%>" onchange="this.form.submit()">
                        <p> <%= element.name %> </p>
                        <input type="hidden" name="theName" value=" <%= dayOfWeek %>">
                    </div>
                </form>
            <% }); %>
        <form class="item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value="<%= dayOfWeek %>">+</button>
        </form>
    </div>
    
</body>
</html>